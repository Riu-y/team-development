<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<!-- 名前 姓 -->
   <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "", placeholder:"姓" %>
  </div>
<!-- 名前 名 -->
   <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name , autofocus: true, autocomplete: "", placeholder:"名" %>
  </div>
<!-- フリガナ・セイ -->
   <div class="field">
    <%= f.label :family_name_kana %><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "", placeholder:"姓フリガナ" %>
  </div>
<!-- フリガナ・ナ -->
   <div class="field">
    <%= f.label :efirst_name_kana %><br />
    <%= f.text_field :first_name_kana , autofocus: true, autocomplete: "", placeholder:"名フリガナ" %>
  </div>
<!-- 郵便番号 -->
   <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code , autofocus: true, autocomplete: "", placeholder:"ハイフンは不要です" %>
<!-- 住所 -->
   <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address , autofocus: true, autocomplete: "", placeholder:"住所" %>
<!-- 電話番号 -->
   <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number , autofocus: true, autocomplete: "", placeholder:"電話番号" %>
<!-- Email -->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<!-- パスワード -->
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
